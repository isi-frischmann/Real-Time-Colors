<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Index Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="style.css">
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script>
        var socket = io();

        $('document').ready(function(){

            socket.on('updateAll', function(color){
                    $('.wrapper').attr('style', 'background-color:' + color.colorGeneral);
                });

            $('#green').click(function(){
                socket.emit('changeGreen');
            })

            $('#blue').click(function(){
                console.log('Blue button is clicked')
                socket.emit('changeBlue');
            })

            $('#yellow').click(function(){
                socket.emit('changeYellow');
            })

        })
    </script>
</head>
<body class="wrapper">

        <h1>Change Background color in real time</h1>

        <button type="submit" id="green">Green</button>

        <button type="submit" id="blue">Blue</button>

        <button type="submit" id="yellow">Yellow</button>
    

</body>
</html>